<h2>All day</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Successful</th>
      <th>Report</th>
    </tr>
  </thead>
  <tbody>
      <% @days.each do |day| %>
        <tr>
          <td><%= formated_date(day.date) %></td>
          <td class="<%=day.successful ? 'glyphicon glyphicon-ok' : 'uccess glyphicon glyphicon-remove'%>"><% day.successful %></td>
          <td><%= day.report %></td>
          <td><%= button_to "Show", day ,:method => "get",:class => "btn btn-success" %></td>
          <td><%= button_to "Edit", edit_day_path(day), :method => "get", :class => "btn btn-warning" %></td>
          <td><%= button_to "Delete", day, method: :delete, :class => "btn btn-danger" %></td>
        </tr>
      <%end%>
  </tbody>
</table>
<br>
<%= render  "calendar" %>
<span class="btn btn-default btn-lg" ><%= link_to "New day", new_day_path %></span>
